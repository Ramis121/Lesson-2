<Window x:Class="Button.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button"
        mc:Ignorable="d"
        Title="Window4" Height="400" Width="800">
    <Grid Margin="0,0,-0.4,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button  FontSize="17" Grid.ColumnSpan="2" Margin="3,72,393.6,10.2" >Button 1</Button>
        <Button  FontSize="17" Grid.Column="1" Margin="6.2,72,-6.4,10.2" >Button 2 with long text</Button>
        <Button  FontSize="17" Grid.ColumnSpan="2" Margin="10,201,3.6,5.6" Grid.RowSpan="2"  >Button 3</Button>

    </Grid>
</Window>
