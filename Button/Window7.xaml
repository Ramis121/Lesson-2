<Window x:Class="Button.Window7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button"
        mc:Ignorable="d"
        Title="Window7" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button FontSize="20">Button 1</Button>
        <Button FontSize="20" Grid.Column="1">Button 2</Button>
        <Button FontSize="20" Grid.Column="2">Button 3</Button>
        <Button FontSize="20" Grid.Column="3">Button 4</Button>
        <Button FontSize="20" Grid.Column="4">Button 5</Button>
        <Button FontSize="20" Grid.Column="5">Button 6</Button>


    </Grid>
</Window>
